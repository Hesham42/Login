<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.heshammostafa.login.student">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/studentbg"
    android:scaleType="centerCrop"

    >

    <!--<com.example.heshammostafa.login.customefonts.MyTextview-->
        <!--android:id="@+id/myTextview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:text="Menna"-->
        <!--android:textColor="#000"-->
        <!--android:textSize="34dp"-->
        <!--android:layout_centerInParent="true"-->
        <!--/>-->
</FrameLayout>
<LinearLayout
    android:layout_above="@+id/linear3"
    android:id="@+id/linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<com.example.heshammostafa.login.customefonts.MyTextview
    android:id="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Student Login"
    android:textColor="#4c565f"
    android:textSize="29dp"
    android:gravity="center"
    />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/colorhint"
        android:textColor="@color/colortext"
        >
        <com.example.heshammostafa.login.customefonts.MyEditText
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginLeft="46dp"
            android:maxLength="12"
            android:background="#0000"
            android:padding="16dp"
            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginRight="56dp"
            android:layout_marginLeft="56dp"
            android:layout_height="1dp"
            android:background="#59d58d"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
    android:id="@+id/Password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColorHint="@color/colorhint"
    android:textColor="@color/colortext"
    >
    <com.example.heshammostafa.login.customefonts.MyEditText
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginLeft="46dp"
        android:maxLength="12"
        android:background="#0000"
        android:padding="16dp"
        android:gravity="left"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="12dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_marginRight="56dp"
        android:layout_marginLeft="56dp"
        android:layout_height="1dp"
        android:background="#59d58d"
        />

    </android.support.design.widget.TextInputLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp"
    >
    <CheckBox
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:checked="false"
        android:id="@+id/remember"
        android:buttonTint="@color/colorhint"
        android:textColor="@color/colorhint"
        android:layout_marginLeft="60dp"
        android:textSize="11dp"/>
    <com.example.heshammostafa.login.customefonts.MyTextview
        android:layout_weight="2.3"
        android:id="@+id/forgotpass"
        android:layout_width="0dp"
        android:enabled="false"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textColor="@color/colorhint"
        android:layout_gravity="center"
        android:textSize="11dp"
        />
</LinearLayout>
<com.example.heshammostafa.login.customefonts.MyTextview
    android:id="@+id/signin1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect1"
    android:text="Sign in"
    android:textSize="16dp"
    android:textColor="#fff"
    android:gravity="center"
    android:layout_marginLeft="60dp"
    android:layout_marginRight="60dp"
    android:padding="12dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="11dp"
    android:elevation="3dp"
/>

    <com.example.heshammostafa.login.customefonts.MyTextview
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or"
        android:layout_above="@+id/acc"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/colorhint"
        android:layout_marginBottom="5dp"/>
</LinearLayout>

    <LinearLayout
        android:id="@+id/linear3"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/rectfb"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"



            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/fb"
                android:padding="12dp"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/rectgoogle"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/google"
                android:padding="12dp"

                />

        </LinearLayout>




    </LinearLayout>






</RelativeLayout>
