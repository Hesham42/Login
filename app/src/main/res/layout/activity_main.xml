<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.heshammostafa.login.MainActivity">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@drawable/welcomeclass"
    >
<com.example.heshammostafa.login.customefonts.MyTextview
    android:id="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Guinness"
    android:textColor="#000"
    android:textSize="34dp"
    android:gravity="center"
    android:layout_centerInParent="true"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="60dp">

    <com.example.heshammostafa.login.customefonts.MyTextview
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Get connected with"
        android:lines="1"
        android:textColor="#9d9ea0"
        android:gravity="center"
            />

       <com.example.heshammostafa.login.customefonts.MyTextview
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="the best University"
           android:gravity="center"
           android:lines="2"
           android:paddingBottom="21dp"
           android:textColor="#9d9ea0"
           />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            >
            <com.example.heshammostafa.login.customefonts.MyTextview
               android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rect"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#fff"
                android:padding="10dp"
                android:id="@+id/student"
                />
            <com.example.heshammostafa.login.customefonts.MyTextview
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:id="@+id/teacher"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher"
                android:textColor="#fff"
                android:background="@drawable/rect2"
                android:padding="10dp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>